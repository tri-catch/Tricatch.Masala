@using Tricatch.Masala.Domain.Menu

<MudTabs Outlined
         Position="Position.Right"
         ActivePanelIndex="_activeTabIndex"
         ActivePanelIndexChanged="OnTabChanged" >

    @foreach (MenuCategory category in Enum.GetValues(typeof(MenuCategory)))
    {
        <MudTabPanel Text="@category.Humanize()"
                     Style="font-size: x-large; text-transform: none" />
    }

</MudTabs>