@inherits LayoutComponentBase
@using Tricatch.Masala.Website.Theme

<MudThemeProvider Theme="_theme"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MasalaAppBar 
        IsDrawerOpen="_isDrawerOpen"
        OnDrawerToggle="DrawerToggle"/>
    <MudDrawer 
        @bind-Open="_isDrawerOpen" 
        ClipMode="DrawerClipMode.Always" 
        Elevation="2" 
        Anchor="Anchor.End"
        Breakpoint="Breakpoint.None"
        Width="25vw">
        <ShoppingCart />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private MudTheme _theme = new WebsiteTheme();
    private bool _isDrawerOpen = false;

    void DrawerToggle()
    {
        _isDrawerOpen = !_isDrawerOpen;
    }
}