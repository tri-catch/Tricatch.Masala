<MudAppBar>
    <MudText Typo="Typo.h5" Class="mr-8">
        <b><span style="color: #EF6C00">Masala</span> On Wheels.</b>
    </MudText>

    <MudButton Variant="Variant.Text"
               Color=_menuTextColor
               Class="ml-4 mr-4"
               OnClick="@(() => SetActiveTabColor(_menuText))"
               Href="/">
        @_menuText
    </MudButton>
    <MudButton Variant="Variant.Text"
               Color=_aboutTextColor
               Class="ml-4 mr-4"
               OnClick="@(() => SetActiveTabColor(_aboutText))"
               Href="/about">
        @_aboutText
    </MudButton>
    <MudButton Variant="Variant.Text"
               Color=_contactUsTextColor
               Class="ml-4 mr-4"
               OnClick="@(() => SetActiveTabColor(_contactUsText))"
               Href="/contact">
        @_contactUsText
    </MudButton>

    <MudSpacer />

    <MudIcon Icon="@Icons.Material.Filled.LocationOn"
             Color="Color.Error" />
    <MudButton Variant="Variant.Text"
               Class="mr-4">
        Georgetown, Ky
    </MudButton>

    <MudIconButton Icon="@Icons.Material.Outlined.ShoppingCart"
                   Color="@_shoppingCartColor"
                   Edge="Edge.End"
                   Class="mr-4 ml-4"
                   OnClick="@((e) => DrawerToggle())" />
</MudAppBar>
