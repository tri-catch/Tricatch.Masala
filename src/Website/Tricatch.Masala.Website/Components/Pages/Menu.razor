@page "/"

<PageTitle>Masala On Wheels</PageTitle>

<MudContainer Class="mt-16">
    <MudGrid>
        <MudItem md="3">
            <MenuCategoryPanel CategoryChanged="OnCategorySwitched"/>
        </MudItem>

        <MudItem md="9">
            <MudText 
                Typo="Typo.h3"
                Style="text-align: center;">
                @(_selectedCategory.Humanize())
            </MudText>
            
            <MudList>
                @foreach (var menuItem in _displayMenuItems)
                {
                    <MudListItem>
                        @menuItem.Title
                    </MudListItem>
                }
            </MudList>
            
        </MudItem>
    </MudGrid>
</MudContainer>